{{ form_start(form) }}
<div class="container container-table">
    <div class="form-group col-md-6">
        <label >Book Name</label>
        <input class="form-control" {{ form_widget(form.bookName) }}
    </div>
    <div class="form-group col-md-6">
        <label >Price</label>
        <input class="form-control" {{ form_widget(form.price) }}
    </div>
    <div class="form-group col-md-6">
        <label >Author</label>
        <select id="disabledSelect" class="form-select" {{ form_widget(form.author) }}
    </div>
    <div class="form-group col-md-6">
        <label >Category</label>
        <select id="disabledSelect" class="form-select"  {{ form_widget(form.category) }}
    </div>
    <div class="form-group col-md-6">
        <label >Issue Book</label>
        <select id="disabledSelect" class="form-select" {{ form_widget(form.issueBook) }}
    </div>
    <div class="form-group col-md-6">
        <button class="btn btn-success">{{ button_label|default('Save') }}</button>
    </div>
</div>
{{ form_end(form) }}
